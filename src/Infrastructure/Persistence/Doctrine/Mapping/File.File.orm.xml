<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">



    <entity name="DriveManager\Domain\Model\File\File" table="files"
            repository-class="DriveManager\Infrastructure\Persistence\File\FileRepositoryDoctrine">
        <id name="id" type="file_id" column="file_id">
            <generator strategy="NONE"/>
        </id>
        <field name="date" type="datetime_immutable" column="date"/>
        <field name="fileName" type="file_name" column="file_name"/>
        <field name="path" type="path" column="path"/>
        <field name="content" type="file_content" column="content"/>
    </entity>
</doctrine-mapping>